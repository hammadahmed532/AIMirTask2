@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Import Engagement Data";
}

<div class="container-fluid px-4 py-3">
    <h2 class="mb-4 fw-bold">Import Engagement Survey Data</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card p-4">
                <h5 class="mb-4">Upload Excel File</h5>
                
                <form asp-action="ImportExcel" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="file" class="form-label">Select Excel File (.xlsx or .xls)</label>
                        <input type="file" class="form-control" id="file" name="file" accept=".xlsx,.xls" required />
                        <div class="form-text">Upload an Excel file containing engagement survey responses.</div>
                    </div>

                    <div class="mb-3">
                        <label for="surveyCycleId" class="form-label">Survey Cycle ID</label>
                        <input type="number" class="form-control" id="surveyCycleId" name="surveyCycleId" value="1" min="1" required />
                        <div class="form-text">Enter the Survey Cycle ID to associate the responses with.</div>
                    </div>

                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-upload me-2"></i>Import File
                    </button>
                </form>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card p-4">
                <h5 class="mb-4">Quick Import</h5>
                <p class="text-muted mb-3">Import the Excel file from the images folder.</p>
                
                <form asp-action="ImportFromImagesFolder" method="post">
                    <div class="mb-3">
                        <label for="surveyCycleIdQuick" class="form-label">Survey Cycle ID</label>
                        <input type="number" class="form-control" id="surveyCycleIdQuick" name="surveyCycleId" value="1" min="1" required />
                    </div>

                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-file-earmark-excel me-2"></i>Import from Images Folder
                    </button>
                </form>
            </div>

            <div class="card p-4 mt-4">
                <h6 class="fw-semibold mb-3">Expected Excel Format</h6>
                <ul class="list-unstyled small">
                    <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i>First row should contain headers</li>
                    <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i>Required columns: Employee Code</li>
                    <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i>Optional columns: Email, First Name, Last Name, Location, Department, Gender, Tenure, Age</li>
                    <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i>Driver columns: Leadership, Teamwork, Work-Life Balance, etc.</li>
                    <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i>Comment column: Comment, Comments, or Feedback</li>
                </ul>
            </div>
        </div>
    </div>
</div>
